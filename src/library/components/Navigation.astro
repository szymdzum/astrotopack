---
const { menu } = Astro.props;
---

<nav role="navigation" aria-label="main navigation">
  <ul>
    {
      menu.map(({ link, text }) => (
        <li>
          <a href={link}>{text}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  nav {
    li {
      display: inline-block;
    }

    a {
      font-weight: 800;
      text-transform: uppercase;
      padding: var(--padding-sm);

      &:focus,
      &:hover {
        text-decoration: underline;
      }
    }
  }
</style>
