---
import Section from '@layouts/Section.astro';
import Button from '@components/Button.astro';
import { getEntry } from 'astro:content';

const content = await getEntry('landing', 'about');
const { name, title, subtitle, paragraphs } = await content.data;
---

<Section name={name}>
  <div class="content">
    <div class="flex-container">
      <div class="column image-container">
        <img alt="Ekspertka w dziedzinie ochrony środowiska" src="/about_img_1.png" />
      </div>

      <div class="column stack-sm">
        <h2>{title}</h2>
        <p>{paragraphs[0]}</p>
        <Button href="#services">Dowiedz się więcej</Button>
      </div>
    </div>

    <div class="flex-container">
      <div class="column">
        <img alt="Ekspertka w dziedzinie ochrony środowiska" src="/about_img_2.png" />
      </div>
      <div class="column stack-sm">
        <h2>{subtitle}</h2>
        <p>{paragraphs[1]}</p>
        <Button href="#contact">Skontaktuj się</Button>
      </div>
    </div>
  </div>
  <style lang="scss">
    @import '@styles/_layout.scss';

    .flex-container {
      display: flex;
      justify-content: space-between;
      margin-top: var(--margin-lg);
      gap: var(--gap-md);

      .column {
        flex: 1;
      }

      img {
        object-fit: cover;
        max-width: 90%;
        height: auto;
        border-radius: var(--radius-md);
      }

      @include breakpoint(large) {
        flex-direction: row;

        .image-container {
          order: 2;
        }
      }
    }
  </style>
</Section>
