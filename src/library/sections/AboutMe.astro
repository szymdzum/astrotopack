---
import Section from '@layouts/Section.astro';
import { getEntry } from 'astro:content';

const content = await getEntry('landing', 'about');
const { name, title, subtitle, paragraphs } = await content.data;
---

<Section name={name}>
  <div class="header stack-sm">
    <h2>{title}</h2>
    <p>{subtitle}</p>
  </div>

  {
    paragraphs.map((paragraph) => (
      <div class="content">
        <p>{paragraph}</p>
      </div>
    ))
  }
</Section>
