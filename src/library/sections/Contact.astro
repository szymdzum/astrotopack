---
import Section from '@layouts/Section.astro';
import Button from '@components/Button.astro';
import { getEntry } from 'astro:content';

const content = await getEntry('landing', 'contact');
const { name, title, subtitle } = content.data;
---

<Section name={name}>
  <div class="header stack-sm">
    <h2>{title}</h2>
    <p>{subtitle}</p>
  </div>

  <div class="content">
    <div class="buttons">
      <a href="mailto:info@puttopack.com?subject=This is an email" target="_blank">
        <Button className="has-icon email" iconName="mail-ico">Skontaktuj siÄ™</Button>
      </a>
    </div>
  </div>
</Section>
