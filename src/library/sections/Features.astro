---
import Section from '@layouts/Section.astro';
import Feature from '@components/Feature.astro';

import { getEntry } from 'astro:content';
const features = await getEntry('page', 'features');
---

<Section name="features">
  <div class="header stack-sm">
    <h2>Put To Pack</h2>
    <p>Specjalizuje siÄ™ w takich obszarach jak:</p>
  </div>
  <div class="content">
    <div class="features-container">
      {features.data.map((feature) => <Feature {...feature} />)}
    </div>
  </div>
</Section>

<style lang="scss">
  .features-container {
    display: flex;
    flex-wrap: wrap;
    --multiplier: calc(40rem - 100%);
  }
</style>
