---
import Section from '@layouts/Section.astro';
import Button from '@components/Button.astro';

import { getEntry } from 'astro:content';
const content = await getEntry('landing', 'hero');
const { name, title, subtitle } = content.data;
---

<Section name={name}>
  <div class="header stack">
    <h1>{title}</h1>
    <p>{subtitle}</p>
    <div class="buttons">
      <Button href="#services">Us≈Çugi</Button>
      <Button href="#contact" className="secondary">Kontakt</Button>
    </div>
  </div>
</Section>
