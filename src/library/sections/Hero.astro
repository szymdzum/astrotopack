---
import Link from '@components/Link.astro';

import { getEntry } from 'astro:content';
const content = await getEntry('landing', 'hero');
const { name, title, subtitle } = content.data;
---

<section id={name} class="center section">
  <div class="header stack">
    <h1>{title}</h1>
    <p>{subtitle}</p>
    <div class="buttons">
      <Link url="#contact" className="button outline">Kontakt</Link>
      <Link url="#services" className="button">Us≈Çugi</Link>
    </div>
  </div>
</section>
