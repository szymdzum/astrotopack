<style>
.navbar {
  top: 0;
  position: sticky;
  z-index: 1000;
  border-bottom: 1px solid #eee;
  background-color: var(--color-navbar)
}

.navbar > div {
  margin: 0 auto;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  font-size: 1.5rem;
  font-weight: bold;
}

.toggle {
  display: none;
}

.menu {
  display: flex;
  gap: 1rem;
}

.menu ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
}

.menu li {
  padding: 0 15px;
}

@media (max-width: 768px) {
  .menu {
    display: none;
    flex-direction: column;
    width: 100%;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
  }

  .menu.active {
    display: flex;
  }

  .toggle {
    display: none;
  }
}
</style>

<section class="navbar">
  <div>
    <div class="logo">Logo</div>
    <div class="toggle">
      &#9776;
    </div>
    <nav class="menu">
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Services</a></li>
      </ul>
    </nav>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleMenu = () => {
      const menu = document.querySelector('.menu');
      if (menu) {
        menu.classList.toggle('active');
      }
    };

    const toggleButton = document.querySelector('.toggle');
    if (toggleButton) {
      toggleButton.addEventListener('click', toggleMenu);
    }
  });
</script>
